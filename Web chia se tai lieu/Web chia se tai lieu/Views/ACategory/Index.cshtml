@model List<Web_chia_se_tai_lieu.Models.Category>
@{
    ViewBag.Title = "Categories";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h2>Categories</h2>
<button class="btn-info"><a asp-action="Add">Add</a></button>
<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Image</th>
        <th>Count Of Docs</th>
        <th>Action</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <th class="align-self-center">@item.Id</th>
            <th class="align-self-center">@item.Name</th>
            <th><img src="@item.Image" style="max-width: 50px;"/></th>


            <th class="align-self-center">@item.NumberOfProduct</th>
            <th><!--
               <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
               
                <a asp-action="Display" asp-route-id="@item.Id">Display</a>
                 -->
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </th>
            
        </tr>
    }
    
</table>
