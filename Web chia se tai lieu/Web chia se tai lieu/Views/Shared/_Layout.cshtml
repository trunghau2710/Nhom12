<body>
    <div class = "header">
        <div class="header__nav" style="border: 1px solid black;">
            <div class="header__title-name" >𝓜𝔂 𝓓𝓸𝓬𝓾𝓶𝓮𝓷𝓽 </div>
            <div class="header__title-content">Nơi chia sẻ tài liệu miễn phí</div>
        </div>
        <div class="header__nav">
            <div class= "header__nav-list">
                <div class="header__nav-item menu">
                    <div class="tag-link text-color1">Menu</div>
       
                    <ul class="menu-list">
                        @foreach (var item in ViewBag.Categories)
                        {
                            <li><a class="" asp-action="Product" asp-controller="Home" asp-route-id="@item.Id">@item.Name </a></li>
                        }
                    </ul>
                    
                </div>
                
            </div>
            <div class="header__nav-search">
                
                <input id="search" style="margin-right: 0; min-width: none;" type="text" placeholder="tìm kiếm 1 triệu tài liệu">
                @{
                    
                }
                <!-- <a asp-action="Search" asp-controller="Home" asp-route-search=TextChange() style="margin-left: 0;" class="btn btn-info"><i class="bi bi-search"></i></a>-->
                <button style="margin-left: 0;" class="btn btn-info" onclick="Search()"><i class="bi bi-search"></i></button>
                
            </div>
            
            <div class="header__nav-upload">
                @if(ViewData["userId"] == null)
                {
                    <button class="btn1" type="submit" onclick="NoLogin()"><i class="bi bi-upload"></i> Upload</button>
                }else{
                    <a style="text-decoration: none; color: black; font-style: normal;" asp-action="Upload" asp-controller="Home">
                        <button class="btn1" type="submit"><i class="bi bi-upload"></i> Upload</button>
                    </a>
                }
               
                
            </div>    
            <script>

                function Search() {
                    alert("Tesst");
                    var text = document.getElementById("search");
                    var search = text.value;
                    $.ajax({
                        url: "/Home/Search",
                        type: 'POST',
                        data: { search },
                        success: function () {
                            console.log("Hoan Thanh");
                        }
                    })
                    function NoLogin() {
                        alert("Phai dang nhap moi duoc up tai lieu");
                    }
                }
            </script>
            <ul class="header__nav-list" styles="">
                <li class="header__nav-item noitification">
                    <i class="bi bi-bell-fill ">Thong bao</i>
                </li>
                @if(ViewData["userId"] == null)
                {
                    <li class="header__nav-item"><a class="tag-link text-color1" asp-action="Register">Dang Ky</a></li>
                    <li class="header__nav-item"><a class="tag-link text-color1" asp-action="Login">Dang Nhap</a></li>
                }else{
                    <li class="header__nav-item" style="background-color: none; padding: 0px 15px;">Coin: @ViewBag.User.Coin</li>
                    <li class="header__nav-item"> Xin Chào <a class="tag-link text-color1" asp-action="" title="Click vào để đi đến quản lý tài khoản">@ViewBag.User.Name</a></li>
                    <li class="header__nav-item" style="margin-left: 20px;"><a class="tag-link text-color1" asp-action="Logout">Dang Xuất</a></li>
                }
                
                
            </ul>
        </div>
      
    </div>

    <div class="chat">
        
        <div class="icon-mess">
            <a href="https://zalo.me/0815805626"><img src="/Images/zalo-logo-inkythuatso-14-15-05-01.jpg" alt=""></a>
            <img src="/Images/Apple_Messages-512.webp" alt=""> 
        </div>
    </div>
    @RenderBody();
    <!-- Footer Start -->
    <div class="container-fluid bg-dark text-white-50 py-5 px-sm-3 px-lg-5" style="margin-top: 90px;">
