        </div>
        <div class="header__nav">
            <div class= "header__nav-list">
                <div class="header__nav-item menu">
                    <div class="tag-link text-color1">Menu</div>
       
                    <ul class="menu-list">
                        @foreach (var item in ViewBag.Categories)
                        {
                            <li><a class="" asp-action="Product" asp-controller="Home" asp-route-id="@item.Id">@item.Name </a></li>
                        }
                    </ul>
                    
                </div>
                
            </div>
            <div class="header__nav-search">
                <input style="margin-right: 0; min-width: none;" type="text" placeholder="tìm kiếm 1 triệu tài liệu">
                <button style="margin-left: 0;" type="submit"><i class="bi bi-search"></i></button>
                
            </div>
            <div class="header__nav-upload">
                <button class="btn1" type="submit"><i class="bi bi-upload"></i> Upload</button>
            </div>    

            <ul class="header__nav-list" styles="">
                <li class="header__nav-item noitification">
                    <i class="bi bi-bell-fill ">Thong bao</i>
                </li>
                <li class="header__nav-item"><a class="tag-link text-color1" href="">Dang Ky</a></li>
                <li class="header__nav-item"><a class="tag-link text-color1" href="">Dang Nhap</a></li>
                
            </ul>
        </div>
      
    </div>

    <div class="chat">
        
        <div class="icon-mess">
            <a href="https://zalo.me/0815805626"><img src="/Images/zalo-logo-inkythuatso-14-15-05-01.jpg" alt=""></a>
            <img src="/Images/Apple_Messages-512.webp" alt=""> 
        </div>
    </div>
    @RenderBody();
   
    <div class="footer">
       
        <div>hello! Cái footer này làm cái gì vậy</div>
    </div>
    <i class="fa-regular fa-file-word"></i>
    <i class="fa-solid fa-file-pdf"></i>
    <i class="bi bi-calendar3"></i>
    <i class="bi bi-coin" style="background-color: white; color: red;"></i>
    <div class="form-container">
      <div class="topic">Form Dang Nhap</div>
        <form action="" class="form">
          <div class= "form-row">
            <labe class= "form-label" for="name">Ten:</labe>
            <input class= "form-input" type="text" id="name" name="name" value=""></input>
          </div>
          <div class="form-row">
            <label class="form-label" for="password">Mat Khau:</label>
            <input class= "form-input" name="pass" type="password" id="password" value=""></input>
          </div>
          
        </form>
    </div>

    
   
