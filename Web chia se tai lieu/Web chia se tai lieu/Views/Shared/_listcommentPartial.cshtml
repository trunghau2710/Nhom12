@model IEnumerable<Web_chia_se_tai_lieu.ViewModels.CommentVM>;

    <style>
        .main{
            width: max;
            margin: 15px 0;
            padding: 10px;
            border: 1px solid black;
            
        }
        .item{
            display: flex;
            gap: 10px;
            margin: 4px 0;
        }
        .comment{

        }
        .comment_detail{
            display: flex;
            gap: 15px;
            width: max;
        }
        .comment_conttent{
            color: black;
            padding-top: 4px;
        }
        img{
            width: 50px;
            height: 50px;

        }
        
        .list{
            display: none;
           
        }
        .icon {
            cursor:pointer;
        }
        
        .icon:active  .list{
            display: block;  
            min-width: 50px;
            background-color: wheat;
            border: 1px soil black;
            padding: 2px 4px 2px 4px;
            left: 0px;
            position: absolute;
            top: 0;
        }
        .list:hover {
            display: block;  
            min-width: 50px;
            background-color: wheat;
            border: 1px soil black;
            padding: 2px 4px 2px 4px;
            left: 0px;
            position: absolute;
            top: 0;
        }

            

        
        .list li:hover{
            background-color: white;
            opacity: 0.7;
            border: 1px soil black;
        }
    </style>

    <div class="main">
        @foreach(var item in Model){

        <div class="item">
            <img src="@item.ImgeUrl" />
            <div class="comment">
                <div class="comment_detail">
                    <a href="#" class="text-decoration-none" style="font-weight: bold;">@item.UserName</a>
                    <span style="font:italic; font-size: 14px;">@item.CreatedDate?.ToString("dd-MM-yyyy")  @item.CreatedDate?.ToString("HH:mm")</span>
                </div>
                <div class="d-flex justify-content-between" style="width: 100%; margin-right: 10px;">
                    <p class="comment_content">@item.Content</p>
                    @if(ViewData["UserId"].ToString() == item.UserId.ToString())
                    {
                        <div class="icon" style="position: relative;">
                            <i class="fas fa-ellipsis-v "></i>
                            <ul class="list">
                                <li onclick="Load_Listcomment_delete(@item.Id)">Xóa</li>
                            </ul>
                        </div>
                    }
                    
                </div>
                
            </div>
            
        </div>
        }
        
    </div>