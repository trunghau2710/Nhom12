    <div class="home__product">
        <div class="home__product-list">
            <div class="home__product-list-title item-space">
                <a id="List-Title" href="">Tai Lieu Co Phi</a>
                <div class="home__product-list-category">
                    <div id="premium" class="category-name category1 color" onclick="Reload1()">Co Phi</div>
                    <div id="free" class="category-name color" onclick="Reload2()">Mien Phi</div>
                    <div id="new" class="category-name category3 color" onclick="Reload3()">Moi Up</div>
                </div>
            </div>

            <div id="Top" class="home__product-list-card" >
                
              
            </div>
            <script>
                const arr = ["premium", "free", "new"];
                function Load_color(string){
                    const getElement = document.getElementById(string);
                    console.log(string);
                    arr.forEach((element)=>{
                        if (element == string)
                            getElement.classList.replace("color", "chon");
                        else {
                            document.getElementById(element).classList.replace("chon", "color");
                        }
                    });
                    
                }
                
                
                $.ajax({
                    url: "/Home/Load_homePartial",
                    success: function (data) {
                        // Cập nhật nội dung Partial View
                        $("#Top").html(data);
                    }
                });
                Load_color("premium");

                function Reload1() {
                    Load_color("premium");
                    $.ajax({
                        url: "/Home/Load_homePartial",
                        success: function (data) {
                            // Cập nhật nội dung Partial View
                            $("#Top").html(data);
                        }
                    });
                    const getTitle = document.getElementById("List-Title");
                    getTitle.innerHTML = "Tài Liệu Có Phí";
                }
                function Reload2() {
                    Load_color("free");
                    $.ajax({
                        url: "/Home/Load_homePartial1",
                        success: function (data) {
                            // Cập nhật nội dung Partial View
                            $("#Top").html(data);
                        }
                    });
                    const getTitle = document.getElementById("List-Title");
                    getTitle.innerHTML = "Tài Liệu Miễn Phí";

                    
                }
                function Reload3() {
                    Load_color("new");
                    $.ajax({
                        url: "/Home/Load_homePartial2",
                        success: function (data) {
                            // Cập nhật nội dung Partial View
                            $("#Top").html(data);
                        }
                    });
                    const getTitle = document.getElementById("List-Title");
                    getTitle.innerHTML = "Tài Liệu Mới Đăng t";

                }
            </script>
        </div>

